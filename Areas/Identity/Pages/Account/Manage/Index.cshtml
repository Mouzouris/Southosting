@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="View.Username"></label>
            <input asp-for="View.Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="View.FirstName"></label>
            <input asp-for="View.FirstName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="View.LastName"></label>
            <input asp-for="View.LastName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="View.Roles"></label>
            <input asp-for="View.Roles" class="form-control" disabled />
        </div>
    </div>
</div>