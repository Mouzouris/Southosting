@model southosting.Models.Advert

@if(Model.Uploads.Count > 0)
{
        <div id="advertCarousel_@Model.ID" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img style="object-fit:cover" class="d-block w-100" src="@Model.Uploads[0].ImagePath" />
                </div>
@foreach(var upload in Model.Uploads.Skip(1))
{
                <div class="carousel-item">
                    <img style="object-fit:cover" class="d-block w-100" src="@upload.ImagePath" />
                </div>
}
            </div>
            <a class="carousel-control-prev" role="button" href="#advertCarousel_@Model.ID" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" role="button" href="#advertCarousel_@Model.ID" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
}       
