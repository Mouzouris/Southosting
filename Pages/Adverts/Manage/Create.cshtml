@page
@model southosting.Pages.Adverts.Manage.CreateModel
@using southosting.Logic

@{
    ViewData["Title"] = "Create";
}


<h2>Create Advert</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="control-label"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="maps-autocomplete" class="control-label">Enter a postcode:</label>
                <input type="text" placeholder="Search Google Places" name="maps-autocomplete" class="form-control" id="maps-autocomplete" />
                <input type="text" asp-for="Input.Postcode" class="form-control mt-1" readonly id="postcode-input" />
                <span asp-validation-for="Input.Postcode" id="postcode-validation" class="text-danger"></span>
            </div>            
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Input.Submitted" class="form-check-input" />
                <label class="form-check-label" asp-for="Input.Submitted">Submit for moderation</label>
            </div>
            @await Html.PartialAsync("_FileUpload", new IFormCollectionWrapper { File = Model.FirstUpload })
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-link" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_FileUploadScript");}    
    @{await Html.RenderPartialAsync("_MapsAutocompleteScript");}    
}
